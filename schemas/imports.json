{
	"$schema": "http://json-schema.org/schema#",
	"id": "uri://registries/imports#",

	"blocks": {
		"import": {
			"title": "ZÁKLADNÍ INFORMACE",
			"transCode": "schema.imports.baseData",
			"type": "object",
			"properties": {
				"file": {
					"title": "Subor",
					"transCode": "schema.imports.file",
					"type": "string",
					"required": true,
					"render": {
						"component": "xpsui-uploadable-file"
					},
					"properties": {
						"fileName": {
							"type": "string"
						},
						"fileId": {
							"type": "string"
						},
						"size": {
							"type": "number"
						}
					}
				},
				"type": {
					"title": "Typ suboru",
					"transCode": "schema.imports.type",
					"type": "string",
					"enum": [
						"Bankový výpis - CSV"
					],
					"required": true,
					"render": {
						"component": "psui-selectbox",
						"searchable": true
					}
				},
				"createdOn": {
					"title": "Vytvorene",
					"transCode": "schema.imports.createdOn",
					"type": "string",
					"timestamp" : true
				}
			}
		}
	},

	"models": {
		"import": {
			"title": "Novy import",
			"transCode": "schema.imports.new",
			"table": "imports",
			"security": {
				"create": {
					"static": [
						"Registry - write"
					]
				},
				"read": {
					"static": [
						"Registry - read"
					]
				},
				"modify": {
					"static": [
						"Registry - write"
					]
				}
			},
			"fireEvents":{
				"create": "event-import-created"
			},
			"properties": {
				"baseData": {
					"$ref":"uri://registries/imports#blocks/import"
				}
			}
		}
	},

	"views": {
		"import": {
			"new": {
				"extends":"uri://registries/imports#models/import",
				"saveBySchema":"uri://registries/imports#views/import/view",
				"properties":{
					"baseData": {
						"properties": {
							"createdOn": null
						}
					}
				}
			},
			"view": {
				"$ref":"uri://registries/imports#models/import"
			},
			"search": {
				"extends":"uri://registries/imports#models/import",
				"clientActions": [
					{
						"__DIRECTIVE__": "schema-redirect-link",
						"title": "Zobraziť",
						"params": {
							"path": "/registry/view/uri~3A~2F~2Fregistries~2Fimports~23views~2Fimport/{{model.id}}"
						}
					}
				],
				"listFields": [
					{
						"field": "baseData.createdOn",
						"title": "Vyrvoril",
						"transCode": "schema.imports.createdOn"
					},
					{
						"field": "baseData.type",
						"title": "Typ",
						"transCode": "schema.imports.type"
					},
					{
						"field": "baseData.file.fileName",
						"title": "Soubor",
						"transCode": "schema.imports.file"
					}
				]
			}
		}
	}
}